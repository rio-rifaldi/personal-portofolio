---
interface Props {
	title: string;
}

const {title} = Astro.props;
import "../styles/index.css";
import logos from "../../public/logos.svg";
---

<!doctype html>
<html
	lang="en"
	class="scroll-smooth"
>
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="personal portofolio"
		/>
		<meta
			name="viewport"
			content="width=device-width"
		/>
		<link
			rel="icon"
			type="image/svg+xml"
			href={"/logos.svg"}
		/>

		<meta
			name="generator"
			content={Astro.generator}
		/>
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
